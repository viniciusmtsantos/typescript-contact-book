<%- include('includes/nav') %>
  <%- include('includes/head') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Contato</h1>
          <p class="text-center lead">Crie ou edite seu contatos abaixo</p>


          <%- include('includes/messages') %>

            <% if(contact._id) { %>
              <form action="/contact/edit/<%= contact._id %>" method="POST">
                <% } else { %>
                  <form action="/contact/register" method="POST">
                    <% } %>
                      <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                      <div class="form-group">
                        <label for="nome">Nome</label>
                        <input value="<%= contact.nome %>" type="text" class="form-control" id="nome" name="nome"
                          placeholder="Digite o nome">
                      </div>
                      <div class="form-group">
                        <label for="sobrenome">Sobrenome</label>
                        <input value="<%= contact.sobrenome %>" type="text" class="form-control" id="sobrenome"
                          name="sobrenome" placeholder="Digite o sobrenome">
                      </div>
                      <div class="form-group">
                        <label for="email">Email</label>
                        <input value="<%= contact.email %>" type="email" class="form-control" id="email" name="email"
                          placeholder="Digite o email">
                      </div>
                      <div class="form-group">
                        <label for="telefone">Telefone</label>
                        <input value="<%= contact.telefone %>" type="text" class="form-control" id="telefone"
                          name="telefone" placeholder="Digite o telefone">
                      </div>

                      <button type="submit" class="btn btn-primary">Salvar</button>
                  </form>
        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer') %>