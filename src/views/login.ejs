<%- include('includes/nav') %>
  <%- include('includes/head') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Login</h1>
          <p class="text-center lead">Faça o Login ou crie sua conta abaixo</p>

          <%- include('includes/messages') %>

            <div class="row">

              <div class="col-lg my-5">
                <h4>Faça seu cadastro</h4>
                <p>Se ainda não possui conta, preencha o formulário abaixo</p>
                <form class="form-cadastro" action="/login/register" method="POST">
                  <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Seu Email</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" name="email"
                      placeholder="Digite o email">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Sua Senha</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" name="password"
                      placeholder="Digite a senha">
                  </div>
                  <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                  </div>
                  <button type="submit" class="btn btn-primary">Criar minha conta</button>
                </form>
              </div>

              <div class="col-lg my-5">
                <h4>Faça o seu login</h4>
                <p>Se voce já possui uma conta, faça o seu login abaixo</p>
                <form class="form-login" action="/login/login" method="POST">
                  <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                  <div class="form-group">
                    <label for="exampleInputEmail2">Seu Email</label>
                    <input type="email" class="form-control" id="exampleInputEmail2" name="email"
                      placeholder="Digite o email">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword2">Sua Senha</label>
                    <input type="password" class="form-control" id="exampleInputPassword2" name="password"
                      placeholder="Digite a senha">
                  </div>
                  <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck2">
                    <label class="form-check-label" for="exampleCheck2">Check me out</label>
                  </div>
                  <button type="submit" class="btn btn-primary">Entrar</button>
                </form>
              </div>
            </div>

            <div class="col-lg-2"></div>
        </div>
      </div>

      <%- include('includes/footer') %>